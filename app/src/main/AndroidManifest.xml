<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.eelde.localconfig">

    <application
        android:name=".LocalConfigurationApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ConfigurationsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddConfigurationActivity" />

        <provider
            android:name=".provider.ConfigProvider"
            android:authorities="se.eelde.localconfig.configprovider"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".EditConfigurationActivity"
            android:label="@string/title_activity_edit_configuration"
            android:parentActivityName=".ConfigurationsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.eelde.localconfig.ConfigurationsActivity" />
        </activity>
    </application>

</manifest>